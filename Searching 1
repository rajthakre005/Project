#include<stdio.h>

// linear search

void linear(int n, int roll[], int target) {

for (int i=0; i<n; i++) {

if (roll[i] == target) {

printf("That target is attended");

return;

}

}

printf("That target is not attended");

}

// binary search

void binary(int n, int roll[], int target) {

int low=0, high = n-1, mid;

while (low <= high) {

mid = (low + high) / 2;

if (roll[mid] == target) {

printf("That target is attended");

return;

break;

}else if (roll[mid] < target) {

low = mid +1;

}else {

high = mid - 1;

}

}

printf("That target is not attended");

}

// main

void main() {

int n, target, choice;

printf("Enter total students rollno: ");

scanf("%d", &n);

// user roll no

int roll[n];

printf("Enter Students rollno in sorted form:\n");

for (int i=0; i<n; i++) {

scanf("%d", &roll[i]);

}

// choice and switch

printf("\n Menu:\n");

printf("1.Linear search\n");

printf("2.Binary search\n");


printf("\n Enter your choice:\n");

scanf("%d", &choice);

switch(choice) {

case 1:

printf("\n Linear search is here\n");

printf("Enter the target: ");

scanf("%d", &target);

linear(n, roll, target);

break;

case 2:

printf("\n Binary search is here\n");

printf("Enter the target: ");

scanf("%d", &target);

binary(n, roll, target);

}

}
