#include<stdio.h>
#include<ctype.h>
#include<math.h>
#define size 20
char stack[size];
char push(char c)
{
    if(top == size - 1)
        printf("Stack overflow\n");
    else
        stack[++top] = c;
}
char pop()
{
    if(top == -1)
        printf("Stack is underflow\n");
    else
        return stack[top--];
}
int priority(char x)
{
    if(x == '(')
    {
        return 0;
    }
    if(x == '+'||x == '-')
    {
        return 1;
    }
    if(x == '*'||x == '/')
    {
        return 2;
    }
    if(x == '^')
    {
        return 3;
    }
    return 0;
}
void infixToPostfix(char infix[], char postfix[])
{
    int i=0,k=0;
    char x;
    while(infix[i] != '\0')
    {
        if(isalnum(infix[i]))
        {
            postfix[k++] = infix[i];
        }
        else if(infix[i]=='(')
        {
            push(infix[i]);
        }
        else if(infix[i] == ')')
        {

        }
    }
}
int main()
{
    char infix[size],postfix[size];
    int result;
    printf("Enter infix expression: ");
    scanf("%s", infix);
    infixToPostfix(infix,postfix);
    printf("\n Postfix expression: %s\n",postfix);
    result = evalPostfix(postfix);
    printf("\nResult after evaluation: %d\n",result);
    return 0;
}
