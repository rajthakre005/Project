#include <stdio.h>
#define MAX 5

int queue[MAX];
int front = -1, rear = -1;

int isfull() {
    if(rear == MAX - 1)
        return 1;
    else
        return 0;
}

int isempty() {
    if(front == -1 || front > rear)
        return 1;
    else
        return 0;
}

int enqueue(int data) {
    if(isfull())
        return 0;  // Overflow
    if(front == -1)
        front = 0;
    rear++;
    queue[rear] = data;
    return 1;  // Success
}

int dequeue() {
    if(isempty())
        return 0;  // Underflow
    int data = queue[front];
    front++;
    if(front > rear)
        front = rear = -1;  // Reset queue when empty
    return data;
}

void display() {
    int i;
    if(isempty()) {
        printf("Queue is empty.\n");
        return;
    }
    printf("Queue elements are:\n");
    for(i = front; i <= rear; i++) {
        printf("%d ", queue[i]);
    }
    printf("\n");
}

int main() {
    int choice, data, result;

    while(1) {
        printf("\nMenu:\n1. Add Job\n2. Delete Job\n3. Display Jobs\n4. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("Enter job number to add: ");
                scanf("%d", &data);
                result = enqueue(data);
                if(result)
                    printf("Job added successfully.\n");
                else
                    printf("Queue Overflow! Cannot add job.\n");
                break;

            case 2:
                result = dequeue();
                if(result == 0)
                    printf("Queue Underflow! No job to delete.\n");
                else
                    printf("Deleted job: %d\n", result);
                break;

            case 3:
                display();
                break;

            case 4:
                printf("Exiting program.\n");
                return 0;

            default:
                printf("Invalid choice! Try again.\n");
        }
    }
    return 0;
}
